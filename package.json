{
    "name": "@bounties-network/modules",
    "version": "0.0.2",
    "description": "Produce universal library with webpack and es6",
    "main": "lib/index.js",
    "typings": "lib/index.d.js",
    "scripts": {
        "build": "yarn postinstall && tsc",
        "compile": "tsc",
        "test": "jest --verbose",
        "test:watch": "TERM=dumb jest --watch",
        "postinstall": "typechain --target web3-1.0.0 --outDir src/contracts/types \"src/contracts/abi/**/*.json\""
    },
    "files": [
        "lib"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/krasimir/webpack-library-starter.git"
    },
    "keywords": [
        "webpack",
        "es6",
        "starter",
        "library",
        "universal",
        "umd",
        "commonjs"
    ],
    "author": "Bounties Network",
    "license": "MIT",
    "homepage": "https://bounties.network",
    "dependencies": {
        "axios": "^0.18.0",
        "bignumber.js": "^7.2.1",
        "ipfs-mini": "^1.1.2",
        "lodash": "^4.17.11",
        "reselect": "^4.0.0",
        "web3": "^1.0.0-beta.36"
    },
    "devDependencies": {
        "@types/jest": "^23.3.9",
        "@types/lodash": "^4.14.118",
        "@types/nock": "^9.3.0",
        "@types/web3": "^1.0.14",
        "jest": "^23.6.0",
        "nock": "^10.0.2",
        "truffle-hdwallet-provider": "1.0.0-web3one.3",
        "ts-jest": "^23.10.5",
        "typechain": "^0.3.9",
        "typescript": "^3.1.6",
        "yargs": "^10.0.3"
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "moduleFileExtensions": [
            "ts",
            "js",
            "json",
            "node"
        ],
        "testRegex": "^.+\\.spec\\.ts$"
    }
}
